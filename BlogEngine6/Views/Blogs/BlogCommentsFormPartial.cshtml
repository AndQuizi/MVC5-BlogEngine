@model BlogEngine6.Models.ViewModels.CreateBlogCommentViewModel

@if (Request.IsAuthenticated)
{

using (Html.BeginForm("PostComment", "Blogs", new { BlogID = ViewBag.BlogID }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="BlogID" value=@ViewBag.BlogID />
        <div class="form-group">
            <label for="Content">Write a comment...</label>
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>

        <div class="row form-group">
           <input type="submit" value="Post" class="btn btn-success submitBtn" />
        </div>

    </div>
}
}